{
    "compilerOptions": {
      "target": "es5",
      "lib": ["es2015"],
      "outDir": ".",
      "module": "commonjs",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "removeComments": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "inlineSources": true,
      "types" : ["node" , "express"]
    },
    "include": [
      "src"
    ],
    "exclude" : [
        "node_modules"
    ]
  }